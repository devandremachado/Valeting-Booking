<link href="~/admin/css/car-booking/index.min.css" rel="stylesheet" />

<div id="Cadastro">
    <div class="container">
        <div class="box-card-cadastro">
            <div class="cabecalho">
                <h5 class="titulo">Booking</h5>
            </div>


            <div class="conteudo">
                <form id="formCadastro">

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtName">Name*</label>
                            <input type="text" class="form-control" id="txtName" name="txtName">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtDtBooking">Booking Date*</label>
                            <input type="text" class="form-control" id="txtDtBooking" name="txtDtBooking">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-12 col-md-12 col-lg-6">
                            <label for="cmbFlexibility">Flexibility*</label>
                            <select id="cmbFlexibility" class="form-control">
                                <option value="1">+/- 1 Day</option>
                                <option value="2">+/- 2 Day</option>
                                <option value="3">+/- 3 Day</option>
                            </select>
                        </div>

                        <div class="form-group col-sm-12 col-md-12 col-lg-6">
                            <label for="cmbVehicleSize">Vehicle Size*</label>
                            <select id="cmbVehicleSize" class="form-control">
                                <option value="1">Small</option>
                                <option value="2">Medium</option>
                                <option value="3">Large</option>
                                <option value="4">Van</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-12 col-md-12 col-lg-6">
                            <label for="txtContactNumber">Contact Number*</label>
                            <input type="text" class="form-control" id="txtContactNumber" name="txtContactNumber">
                        </div>

                        <div class="form-group col-sm-12 col-md-12 col-lg-6">
                            <label for="txtEmail">Email Address*</label>
                            <input type="email" class="form-control" id="txtEmail" name="txtEmail">
                        </div>
                    </div>

                    <div class="box-acoes">
                        <div class="btn-acoes">
                            <div class="entrar">
                                <button type="button" id="btnSalvar" class="btn-entrar btn btn-primary">Register</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

            <div class="rodape"></div>

        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript" src="~/admin/js/car-booking/index.js"></script>
}
